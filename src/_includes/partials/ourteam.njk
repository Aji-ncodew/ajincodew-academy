        <style>
            body {
                font-family: 'Poppins', Arial, sans-serif;
                background-color: #f4f4f4;
                color: #333;
                margin: 0;
                padding: 0;
                text-align: center;
            }
            
            .title h1 {
                font-size: 40px;
                color: #222;
                margin-top: 20px;
                letter-spacing: 1px;
                text-transform: uppercase;
            }

            .container {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 25px;
                padding: 30px;
            }

            .card {
                background: white;
                border-radius: 12px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                overflow: hidden;
                width: 320px;
                text-align: center;
                padding: 20px;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

.image-container {
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 15px;
    position: relative; /* Ensure it stays in place */
}

.image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image doesn't stretch */
    position: relative;
}


            .contentBx h3 {
